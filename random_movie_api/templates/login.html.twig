{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="form-container p-3 mt-4">
            <h6>{{ error }}</h6>
            <h1>Login</h1>
            {# alerts rendering #}
            {% set formErrors = form.vars.errors.form.getErrors(true) %}
            {{ parent() }}
            {{ form_start(form, {attr: {class: 'form-group'}}) }}
            <div class="col-centered">
                Username: {{ form_widget(form.username, { attr: {placeholder:'Username'}}) }}<br />
            </div>
            <div class="col-centered">
                Password: {{ form_widget(form.password, { attr: {placeholder:'******'}}) }}<br />
            </div>
            <br />
            {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}